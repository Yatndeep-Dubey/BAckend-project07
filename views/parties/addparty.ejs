<!DOCTYPE html>
<html>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, width=device-width" />

    <link rel="stylesheet" href="./global.css" />
    <link rel="stylesheet" href="./index.css" />
    <title>Moments</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        padding: 0%;
        margin: 0%;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
        color: whitesmoke;
      }

      body {
        background-color: hsla(257, 100%, 8%, 1);
        background-image: radial-gradient(
            at 38% -50%,
            hsla(271, 30%, 50%, 1) 1px,
            transparent 35%
          ),
          radial-gradient(
            at 100% 100%,
            hsla(268, 27%, 30%, 1) 0px,
            transparent 35%
          );
        background-size: 100% 100%;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        min-height: 100vh;
        display:flex;
        flex-direction: column;
      }
      /* ................Navbar.................... */
      .navbar {
        display: flex;
        align-items: center;
        padding-top: 2rem;
        justify-content: space-between;
        top: 0;
      }

      .logo {
        display: flex;
        align-items: center;
        margin-left: 10px;
      }

      .logo a {
        font-size: 2.2rem;
        font-weight: 700;
        text-decoration: none;
      }

      .navbar-links ul {
        margin: 0;
        padding: 0;
        display: flex;

        /* align-items: center; */
      }

      .navbar-links li {
        /* margin-left: 70px; */
        list-style: none;
        font-size: 1rem;
      }

      .navbar-links li a {
        text-decoration: none;
        display: block;
        padding: 1rem;
        
      }
      .toggle-button {
        position: absolute;
        top: 2.5rem;
        right: 1rem;
        display: none;
        flex-direction: column;
        justify-content: space-between;
        width: 30px;
        height: 21px;
      }
      .toggle-button .bar {
        height: 2.5px;
        width: 100%;
        background-color: white;
        border-radius: 10px;
      }

      /* main part */

      .parties-con{
  background: linear-gradient(90deg, #d68b8b, rgba(204, 40, 94, 0.96), #5123f6);
  margin: 2rem 2rem;
  border-radius: 0.5rem;
  padding: 0.7rem;

}
#page-heading{
  /* background-color: green; */
  margin: 2rem ;
  
}
#page-heading h1{
  font-size: 1.5rem;
}
.form{
 
       display: flex;
       flex-direction: column;
        justify-content: center;
        width: 100%;
        margin: auto;
      
        align-items: center;
      
      }
      .form-input,.btn{
        width: 100%;
        height: 100%;
        border: 0.2rem solid rgb(217, 217, 217);
        border-radius: 0.5rem;
        outline: none;
        padding: 0.7rem;
        color: rgb(0, 0, 0);
       font-size: large;
       font-weight: bold;
        margin: 0.5rem 0rem;
        width: 30%;
      }
      .form-input:hover{
        border-color: rgb(120, 120, 120);
        
      }
      .form-input:focus{
       
        border-color: rgb(13, 58, 93);
        
      }

      footer {
        background-color: rgb(131, 105, 137);
        padding: 18px;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        width: 100%;
        margin-top: auto;
        text-align: center;
      }

      footer ul {
        display: flex;
        list-style: none;
        width: 100%;
      }

      footer ul li {
        margin-right: 20px;
      }

      



      @media (min-width: 601px) and (max-width: 820px) {
        footer {
          display: inline;
        }
        footer ul {
          justify-content: center;
        }
        footer p,
        footer .en {
          display: flex;
          justify-content: center;
          margin: 10px;
        }

        .form-input,.btn{
          width: 50%;
        }
      }

      @media (min-width: 375px) and (max-width: 600px) {
        .toggle-button {
          display: flex;
          position: absolute;
          top: 2.5rem;
        }

        .form-input,.btn{
          width: 75%;
        }
        .parties-con{
          margin: 1.5rem 0rem ;
        }

        .navbar-links {
          display: none;
          width: 100%;
        }
        .navbar {
          flex-direction: column;
          align-items: flex-start;
        }
        .navbar-links ul {
          width: 100%;
          flex-direction: column;
        }

        .navbar-links li {
          text-align: center;
        }

        .navbar-links li a {
          padding: 1rem 0rem;
          background-color: rgb(131, 105, 137);
        }
        .navbar-links.active {
          display: flex;
        }

        footer {
          display: inline;
        }
        footer ul {
          justify-content: center;
        }
        footer p,
        footer .en {
          display: flex;
          justify-content: center;
          margin: 10px;
        }
      }

      @media (max-width: 374px) {
        .toggle-button {
          display: flex;
          position: absolute;
          top: 2.5rem;
        }
        .parties-con{
          margin: 1.5rem 0rem ;
        }
        .form-input,.btn{
          width: 100%;
        }
        .navbar-links {
          display: none;
          width: 100%;
        }
        .navbar {
          flex-direction: column;
          align-items: flex-start;
        }
        .navbar-links ul {
          width: 100%;
          flex-direction: column;
        }

        .navbar-links li {
          text-align: center;
        }

        .navbar-links li a {
          padding: 1rem 0rem;
          background-color: rgb(131, 105, 137);
        }
        .navbar-links.active {
          display: flex;
        }

        footer {
          display: inline;
        }
        footer ul {
          justify-content: center;
        }
        footer p,
        footer .en {
          display: flex;
          justify-content: center;
          margin: 10px;
        }
      }

    </style>

<body>
  <!-- navbar -->
  <nav class="navbar">
    <div class="logo">
      <a href="/">Moments</a>
    </div>

    <a href="#" class="toggle-button">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </a>

    <div class="navbar-links">
      <ul>
        <li><a href="/">Home</a></li>
          <li><a href="/team">Team</a></li>
          <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
  </nav>
  <!-- main part -->
<main>
  <div class="parties-con">
    <div id="page-heading" >
<h1 style="text-align: center;">Organize A Party</h1>    </div>
<form class="form" method="POST" autocomplete="off">
    
  
  
      <input type="text" name="name" class="form-input" id="name" placeholder="Party Name" required>
    
  
        
     
        <input type="text" name="venue" required id="
        venue" class=" form-input" placeholder="Venue">
     
        <input type="date" id="date" name="date" class=" form-input">
      
    
        
       
        <input type="time" name="time" id="time" class=" form-input">
      
        <input type="text" name="partycode" id="partycode" class=" form-input" placeholder="Party Code">
       
     
        
     
        <input type="text" name="budget" required id="budget" class="form-input" placeholder="Budget">
     
        
       
        <input type="text" name="smail" required class=" form-input" id="email" placeholder="Email">
    
       
        <input type="text" id="spass" name="spass" required class=" form-input" placeholder="Google Generated Code">
    <button type="submit"  class="btn btn-success">Add</button>
  
  </form>
</div>
</main>   
<footer>
  <div class="cop">
    <p>Moments &copy; 2022 All Rights Reserved</p>
  </div>
  <div class="en">
    <img
      src="https://img.icons8.com/ios-glyphs/30/null/globe-earth--v1.png"
    />
    <p>English</p>
  </div>
  <div class="term">
    <p>Terms & privacy</p>
  </div>
  <div>
    <ul>
      <li>
        <img src="https://img.icons8.com/metro/30/null/twitter.png" />
      </li>
      <li>
        <img
          src="https://img.icons8.com/metro/26/null/facebook-new--v2.png"
        />
      </li>
      <li>
        <img src="https://img.icons8.com/metro/26/null/instagram-new.png" />
      </li>
      <li><img src="https://img.icons8.com/metro/26/null/next.png" /></li>
      <li>
        <img src="https://img.icons8.com/metro/26/null/linkedin.png" />
      </li>
    </ul>
  </div>
</footer>
<script>
  const toggleButton = document.getElementsByClassName("toggle-button")[0];
  const navbarLinks = document.getElementsByClassName("navbar-links")[0];

  toggleButton.addEventListener("click", () => {
    navbarLinks.classList.toggle("active");
  });
</script>
</body>
</html>