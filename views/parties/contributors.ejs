<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expenses</title>
</head>
<body>
    <form method="POST">
    <div class="tableDiv">
    <table class="table table-striped">
        <h1>Contributors</h1>
        <h5>Total Collection: Rs. </h5>
        <td>Name</td>
        <td>Contribution</td>
        <td>Time</td>
        <td>Mobile</td>
        <tbody>
            <%  person.forEach(element => { %>
                <tr class="head">
                    <th scope="row"><%= element.name %></th>
                    <td><%= element.contribution %></td>
                    <td><%=element.time%></td>
                    <td><%=element.mobile%></td>
                    <td><%=element.status%></td>
                    <td><%=element.email%></td>
                  </tr>
                  
                  <a href="/getpaisevala?id=<%=element._id%>">
                    Update
                  </a>
            <%}) %>
        </tbody>
      </table>
</div>
</form>
</body>
</html>